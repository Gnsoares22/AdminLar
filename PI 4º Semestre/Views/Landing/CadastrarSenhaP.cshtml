@model AdminLar.Models.Usuario

@{
    Layout = "~/Views/Shared/_Error.cshtml"; ;
}

<style type="text/css">

    body {
        background: url("../../Imagens/condominio_comercial.jpg") no-repeat center center fixed;
        background-size: cover;
    }
</style>




<header class="cabecalho">

    <div class="container">


    </div>

</header>

<br />
<br />

<div class="form-gap"></div>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="text-center">
                        <h3><i class="fa  fa-check fa-4x"></i></h3>
                        <h2 class="text-center">Confirme seu cadastro !!</h2>
                        <p>Digite sua senha e confirme a mesma para acessar o sistema.</p>
                        <div class="panel-body">

                            <input type="hidden" class="hide" name="token" id="id" value="@Model.Codigo">

                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock color-blue"></i></span>
                                    <input id="senhas" name="email" placeholder="Digite a senha" class="form-control" type="password">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock color-blue"></i></span>
                                    <input id="confirma" name="email" placeholder="Confirme a senha" class="form-control" type="password">
                                </div>
                            </div>

                            <div class="form-group">
                                <input name="recover-submit" id="btn" class="btn btn-lg btn-primary btn-block" value="Finalizar cadastro" type="submit">
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts{

    <script src="~/Content/js/toastr.min.js"></script>

    <script type="text/javascript">

        $(function () {


            $('#btn').click(function () {

                var codigo = $("#id").val();
                var senha = $("#senhas").val();
                var confirma = $("#confirma").val();

               var url = '@Url.Action("Senhas", "Landing")';



                if (senha == "" || senha.length < 4) {

                    toastr.error("Digite a senha (Ela deve conter no mínimo 4 digitos)");


                } else if (confirma != senha) {

                    toastr.error("As senhas não conferem !!!");


                } else {

                    $.post(url, { Codigo: codigo, Senha: senha, Confirma: confirma },

                        function (data) {

                            //se ele retornar verdadeiro

                            toastr.success("Cadastro feito com sucesso");
                            window.location.href = "@Url.Action("Logar", "Landing")";
                          

                        })
                        .fail(function () {

                            alert("error");

                        });

                }

            });


        });

    </script>


}
